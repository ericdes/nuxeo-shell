<!--    </excludes>-->
<!--  </artifactSet>-->

  <assemble>
    <set>template</set>
    <outputFile>/nxshell</outputFile>
  </assemble>

  <assemble>
    <set>launcher-lib</set>
    <outputFile>/nxshell</outputFile>
  </assemble>

  <assemble>
    <!-- <set>nuxeo-libs-via-dependency-tree</set> -->
    <set>third-party-libs</set>
    <outputFile>nxshell/lib</outputFile>
  </assemble>

  <assemble>
    <set>bundles</set>
    <outputFile>nxshell/bundles</outputFile>
  </assemble>

</assembly>

