<assembly>

  <fileSet id="template">
    <directory>src/main/resources</directory>
  </fileSet>

  <artifactSet id="launcher-lib">
    <import>*</import>
    <includes>
      <artifact name="nuxeo-runtime-launcher" />
    </includes>
  </artifactSet>

  <artifactSet id="bundles">
    <import>*</import>
    <includes>
      <artifact group="org.nuxeo.ecm.*" />      
      <artifact group="org.nuxeo.runtime*" />
      <artifact group="org.nuxeo.common" />
      <artifact group="org.nuxeo.ecm.*" />
    </includes>
    <excludes>
      <artifact name="nuxeo-runtime-launcher"/>
    </excludes>
  </artifactSet>

  <!--artifactSet id="bundles">
    <import>*</import>
    <includes>
      <artifact name="nuxeo-runtime" />
      <artifact name="nuxeo-runtime-scripting" />
      <artifact name="nuxeo-runtime-osgi" />
      <artifact name="nuxeo-core-api" />
      <artifact name="nuxeo-core-schema" />
      <artifact name="nuxeo-core-client" />
      <artifact name="nuxeo-core-io-api" />
      <artifact name="nuxeo-core-io" />
      <artifact name="nuxeo-platform-search-api" />
      <artifact name="nuxeo-shell-commands-base" />
      <artifact name="nuxeo-platform-audit-api" />
    </includes>
  </artifactSet-->


  <artifactSet id="third-party-libs">
    <import>*</import>
    <includes>
      <artifact group="org.jboss.client" />
      <artifact group="jline" />
      <artifact group="dom4j" />
      <artifact group="org.osgi" />
      <artifact name="commons-logging" />      
      <artifact group="log4j" name="log4j" version="1.2.13" />
    </includes>
  </artifactSet>


  <assemble>
    <set>template</set>
    <outputFile>/nxshell</outputFile>
  </assemble>

  <assemble>
    <set>launcher-lib</set>
    <outputFile>/nxshell</outputFile>
  </assemble>

  <assemble>
    <set>third-party-libs</set>
    <outputFile>nxshell/lib</outputFile>
  </assemble>

  <assemble>
    <set>bundles</set>
    <outputFile>nxshell/bundles</outputFile>
  </assemble>

</assembly>

